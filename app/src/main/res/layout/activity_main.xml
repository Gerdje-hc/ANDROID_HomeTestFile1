<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gerdhung_chu.android_hometestfile1.MainActivity">

    <Button
        android:id="@+id/btn_clickMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="135dp"
        android:layout_above="@+id/txt_result"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <EditText
        android:id="@+id/ed_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter First Name"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_above="@+id/ed_last_name"
        android:layout_alignLeft="@+id/ed_last_name"
        android:layout_alignStart="@+id/ed_last_name"
        android:layout_marginBottom="15dp" />

    <EditText
        android:id="@+id/ed_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Last Name"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="73dp"
        android:layout_above="@+id/btn_clickMe"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="246dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="148dp" />

    <Button
        android:id="@+id/btn_gotoP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="Page 2" />

</RelativeLayout>
